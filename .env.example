# ================================
# Environment Variables Template
# ================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit .env to version control!

# ================================
# Neon PostgreSQL Connection
# ================================
# Get these from your Neon dashboard
DB_URL=jdbc:postgresql://ep-xxx-xxx-123456.us-east-2.aws.neon.tech:5432/your-database?sslmode=require
DB_USER=your-neon-username
DB_PASSWORD=your-neon-password

# ================================
# External APIs
# ================================
MARKETCHECK_API_KEY=your-marketcheck-api-key

# ================================
# OAuth 2.0 Configuration
# ================================
# JWT secret for signing access tokens (min 32 characters, use a random string)
OAUTH_JWT_SECRET=your-secure-random-32-character-secret-key

# Base URL of your server (used as JWT issuer)
APP_BASE_URL=https://your-server.com

# ================================
# JVM Options (optional)
# ================================
# JAVA_OPTS=-Xmx512m -Xms256m
